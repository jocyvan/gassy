.row
  .large-6.medium-8.columns.large-centered.medium-centered
    .authform
      %h4= t('sign_up')
      %hr
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.input :name, autofocus: true
        = f.input :email
        = f.input :password, hint: (t('minimum_characters', number: @minimum_password_length) if @minimum_password_length)
        = f.input :password_confirmation
        = f.button :submit, t('helpers.submit.send'), :'data-disable-with' => t('helpers.on_disable'), class: 'small right'
